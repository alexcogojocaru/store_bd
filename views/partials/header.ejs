   <style>
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
      }
      
      li {
        float: right;
      }

      ul h1 {
         float: left;
         margin-left: 20px;
      }
      
      li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }
      
      li a:hover {
        background-color: #111;
      }
      </style>
</head>

<body>
   <ul>
      <form action="/cart" method="POST">
        <li><a href="cart"><i class="fas fa-shopping-cart fa-3x"></i></a></li>
      </form>
      <h1><%= pageTitle %></h1>
   </ul>